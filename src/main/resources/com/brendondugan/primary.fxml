<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.brendondugan.PrimaryController">
    <children>
        <AnchorPane VBox.vgrow="ALWAYS">
            <children>
                <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="400.0"
                      AnchorPane.topAnchor="0.0">
                    <children>
                        <HBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Label text="Number of Farts" HBox.hgrow="ALWAYS"/>
                                <TextField fx:id="fartCountTextBox"
                                           promptText="Please enter the number of farts you want to hear"
                                           HBox.hgrow="ALWAYS"/>
                                <Button fx:id="fartButton" mnemonicParsing="false" onAction="#doFarts" text="Button"/>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets top="15.0"/>
                    </padding>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</VBox>
